<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.msevgi.smarthouse">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="com.msevgi.smarthouse.permission.C2D_MESSAGE"/>

    <permission
        android:name="com.msevgi.smarthouse.permission.C2D_MESSAGE"
        android:protectionLevel="signature"/>

    <application
        android:name="com.msevgi.smarthouse.application.SmartHouseApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">

        <!-- Home Activity ! -->
        <activity
            android:name="com.msevgi.smarthouse.activity.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/HomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Speech Activity ! -->
        <activity
            android:name="com.msevgi.smarthouse.activity.SpeechActivity"
            android:label="@string/title_activity_speech"
            android:theme="@style/SpeechTheme"/>

        <!-- GCM Broadcast Receiver ! -->
        <receiver
            android:name="com.msevgi.smarthouse.receiver.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.hmkcode.android.gcm"/>
            </intent-filter>
        </receiver>

        <!-- Content Provider ! -->
        <provider
            android:name=".content.SmartHouseContentProvider"
            android:authorities="com.msevgi.smarthouse"/>

        <!-- Gcm Service ! -->
        <service android:name="com.msevgi.smarthouse.handler.GcmMessageHandler"/>

        <!-- Gcm Version Metadata ! -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="55000"/>

    </application>

</manifest>
